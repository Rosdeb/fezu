                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_gravity="start"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="25dp"
                        android:textSize="20dp"
                        android:text="Shear your profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_margin="25dp"
                        android:textSize="12dp"
                        android:text="With Fuez, sharing your profile is easy. Whether through social media, email, or direct link, you can showcase your skills to a wide audience, increasing your chances of finding the right job. Employers can review your profile and get in touch directly if they’re interested."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_gravity="start"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="25dp"
                        android:textSize="20dp"
                        android:text="Recive Reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_margin="25dp"
                        android:textSize="12dp"
                        android:text="Your work speaks for itself. After completing jobs or projects, employers and clients can leave reviews on your profile. Positive reviews boost your credibility and help you secure more opportunities. Fuez helps you build a track record of success."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>



                </LinearLayout>
                <ImageView
