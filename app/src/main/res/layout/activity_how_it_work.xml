                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_margin="25dp"
                        android:textSize="12dp"
                        android:text="Start by signing up on Fuez and creating a personalised profile. Whether you’re unemployed or working in the informal sector, Fuez gives you the platform to showcase your skills, experience, and qualifications. Your profile is your digital CV, ready to be shared with potential employers."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/how">

                </ImageView>

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/how1">

