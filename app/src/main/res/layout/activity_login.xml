<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".login">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="300dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/load"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:lottie_rawRes="@raw/load"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/backbutton"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_width="45dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp">

            </ImageView>


            <TextView
                android:layout_marginTop="5dp"
                android:text="Singh"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>



        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/fzue1">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="170dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="35dp"
                android:textColor="@color/white"
                android:text="WELCOME"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_marginTop="170dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:background="@color/white"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/email_input"
                            android:drawableStart="@drawable/baseline_email_24"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="match_parent"
                            android:hint="Email" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="330dp"
                    app:cardCornerRadius="12dp"
                    android:background="@drawable/background_input"
                    android:backgroundTint="@color/white"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        app:passwordToggleEnabled="true"
                        android:background="@drawable/background_input"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/password_input"
                            android:drawableStart="@drawable/baseline_lock_open_24"
                            android:inputType="textPassword"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="wrap_content"
                            android:hint="Enter your password " />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/forget_email"
                        android:textColor="@color/green"
                        android:text="Forget password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="330dp"
                android:id="@+id/singhin"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                app:cornerRadius="12dp"
                android:text="SING IN"
                android:textStyle="bold"
                android:layout_height="65dp">

            </com.google.android.material.button.MaterialButton>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sing_up"
                    android:textColor="@color/red"
                    android:textSize="13dp"
                    android:text="create a new account?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:id="@+id/createaccountid"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_width="12dp"
                    android:layout_height="20dp">

                </ImageView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:id="@+id/g_f"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_marginTop="530dp"
                app:cardCornerRadius="25dp"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/g"
                    android:scaleType="fitXY"
                    android:id="@+id/gogglebutton"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_marginTop="530dp"
                app:cardCornerRadius="25dp"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/f"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:layout_width="45dp"
                    android:layout_height="40dp">
                </ImageView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/g_f"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Or sing up whit social account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>