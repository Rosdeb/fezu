<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:fitsSystemWindows="true"
                    android:src="@drawable/fzue1">

                </ImageView>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="86dp"
                    android:id="@+id/login"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="150dp"
                    android:backgroundTint="@color/bule"
                    android:text="Log-out"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp">

                </com.google.android.material.button.MaterialButton>

                <ImageView
                    android:id="@+id/drower_show"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/baseline_dehaze_24" />


            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Create profile"
                    android:textStyle="bold"
                    android:textSize="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <!-- activity_main.xml -->
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="345dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="62dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="match_parent"
                            android:hint="Full name" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="62dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="textEmailAddress"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="match_parent"
                            android:hint="Email" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="62dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="match_parent"
                            android:hint="Phone numbor " />
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white_1"
                        android:layout_width="330dp"
                        app:cardCornerRadius="8dp"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/spinner_cities"
                            android:layout_width="match_parent"
                            android:layout_height="62dp" />
                    </androidx.cardview.widget.CardView>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="62dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="match_parent"
                            android:hint="ID or passport" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_marginTop="5dp"
                        app:passwordToggleEnabled="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="62dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="match_parent"
                            android:hint="Password" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_marginTop="5dp"
                        app:passwordToggleEnabled="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="62dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="match_parent"
                            android:hint="Confram password" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </CheckBox>
                        <TextView
                            android:text="I consents to the privacy policy and terms of\nservies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="330dp"
                        app:cornerRadius="5dp"
                        android:text="Sing Up"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">

                    </com.google.android.material.button.MaterialButton>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Already have and acount?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:text="Sign up"
                    android:textStyle="bold"
                    android:textColor="@color/bule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
