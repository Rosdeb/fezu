<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout_m"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".My_profile">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigations"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/menu">

    </com.google.android.material.navigation.NavigationView>




        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:id="@+id/fuez"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:fitsSystemWindows="true"
                    android:src="@drawable/fzue1">

                </ImageView>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="86dp"
                    android:id="@+id/login"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="150dp"
                    android:backgroundTint="@color/bule"
                    android:text="Log-out"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp">

                </com.google.android.material.button.MaterialButton>

                <ImageView
                    android:id="@+id/drower_show"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/baseline_dehaze_24" />


            </LinearLayout>


            <ScrollView

                android:scrollbars="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:text="My pro-file "
                            android:textStyle="bold"
                            android:textSize="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/user" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <RatingBar
                        android:id="@+id/ration_user"
                        android:layout_marginLeft="15dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RatingBar>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:text=""
                        android:id="@+id/views"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    </TextView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            android:layout_marginLeft="15dp"
                            android:backgroundTint="@color/black"
                            android:layout_marginTop="25dp"
                            android:layout_width="120dp"
                            android:layout_height="50dp">

                            <LinearLayout

                                android:padding="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/baseline_insert_drive_file_24"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                </ImageView>

                                <TextView
                                    android:textColor="@color/white"
                                    android:text="Download CV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/edit_profile"
                            android:clickable="true"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="8dp"
                            android:layout_marginTop="25dp"
                            android:layout_width="120dp"
                            android:layout_height="50dp">

                            <LinearLayout
                                android:padding="5dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:text="Edit Profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="8dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Email:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginLeft="80dp"
                                    android:id="@+id/email_get"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Address:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:id="@+id/location"
                                    android:layout_marginLeft="60dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Phone numbor:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:id="@+id/phonenumbor"
                                    android:layout_marginLeft="35dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginLeft="50dp"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Expreince level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginLeft="50dp"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Education Quality"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginLeft="50dp"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Skill"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginLeft="50dp"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="MY Availability"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginLeft="50dp"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Shear porfile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <ImageView
                                    android:src="@drawable/baseline_share_24"
                                    android:layout_marginLeft="150dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </ImageView>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="8dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="About"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/baseline_arrow_forward_ios_24"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp">

                                </ImageView>

                                <ImageView
                                    android:layout_marginLeft="250sp"
                                    android:src="@drawable/baseline_dehaze_24"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp">
                                </ImageView>
                            </LinearLayout>


                            <ImageView

                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/user"
                                android:layout_width="200dp"
                                android:layout_height="200dp">
                            </ImageView>



                            <TextView
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="25dp"
                                android:text="Educations"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>




                            <TextView
                                android:textSize="12dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="80dp"
                                android:text="educations not add yet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>



                            <TextView
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="25dp"
                                android:text="Expreience"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>




                            <TextView
                                android:textSize="12dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="80dp"
                                android:text="expreience not add yet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>





                    <LinearLayout
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="80dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/f"
                            android:layout_width="80dp"
                            android:layout_height="80dp">
                        </ImageView>

                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/g" android:layout_width="80dp"
                            android:layout_height="80dp">
                        </ImageView>
                    </LinearLayout>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:text="Company name"
                        android:layout_marginLeft="25dp"
                        android:textSize="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Abouts us"
                        android:layout_marginLeft="25dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="How it works"
                        android:layout_marginLeft="25dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Contact us"
                        android:layout_marginLeft="25dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Pro-file"
                        android:layout_marginLeft="25dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:text="Customer "
                        android:layout_marginLeft="25dp"
                        android:textSize="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="PAIA manual"
                        android:layout_marginLeft="25dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Terms of service"
                        android:layout_marginLeft="25dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Contact us"
                        android:layout_marginLeft="25dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Privecy policy"
                        android:layout_marginLeft="25dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>


            </ScrollView>



        </LinearLayout>




</androidx.drawerlayout.widget.DrawerLayout>