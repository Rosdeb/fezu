<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp">

            </ImageView>



        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="CREATE NEW ACCOUNT"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="110dp"
                android:textStyle="bold"
                android:textColor="@color/bule"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>



            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="52dp"
                            android:textSize="12dp"
                            android:hint="Fullname" />
                    </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:background="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="52dp"
                            android:textSize="12dp"
                            android:hint="Email" />
                    </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="52dp"
                            android:textSize="12dp"
                            android:hint="Phone numbor" />
                    </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
              <!--      <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:background="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:textSize="12dp"
                            android:backgroundTint="@color/background_input"
                            android:background="@drawable/background_input"
                            android:layout_height="52dp"
                            android:hint="Location" />
                    </com.google.android.material.textfield.TextInputLayout>-->
                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="12dp"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:layout_gravity="center_horizontal"
                            android:layout_width="320dp"
                            android:id="@+id/location_selected"
                            android:layout_height="55dp">
                        </Spinner>
                    </androidx.cardview.widget.CardView>




                </LinearLayout>
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="330dp"
                android:layout_marginTop="10dp"
                app:cornerRadius="12dp"
                android:id="@+id/singinid"
                android:text="SING IN"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_height="65dp">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_marginTop="550dp"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="100dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/g"
                android:scaleType="fitXY"
                android:id="@+id/gogglebutton"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_marginTop="550dp"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="190dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/f"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_width="45dp"
                android:layout_height="40dp">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="605dp"
            android:layout_marginLeft="93dp"
            android:text="Or sing up whit social account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>

</LinearLayout>
